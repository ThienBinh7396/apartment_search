<resources>
  <!-- Base application theme. -->
  <style name="DatePickerCustomHeader" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#333333</item>
    <item name="fontFamily">@font/lato_black</item>
  </style>

  <style name="DatePickerCustomStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="background">@drawable/custom_datepicker_drawable_background</item>
    <item name="android:textColor">@color/custom_datepicker_text_color</item>
    <item name="fontFamily">@font/lato_regular</item>
  </style>

  <style name="DatePickerCustomStyleArrow" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="tint">#3165ec</item>
  </style>

  <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
    <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:backgroundDimAmount">0.3</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
  </style>

  <style name="CustomDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>

    <item name="android:background">@color/colorTransparent</item>

    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:backgroundDimAmount">0.3</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
  </style>

  <style name="CustomDialogAnimation">
    <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
    <item name="android:windowExitAnimation">@anim/slide_out_down</item>
  </style>

</resources>