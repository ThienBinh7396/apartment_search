<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="100dp">

    <TextView
      style="@style/TextSmallHeaderStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimen_24"
      android:text="@string/house_rules" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimen_12"
      android:background="@drawable/left_dot_border_background"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:lineSpacingExtra="3sp"
        android:text="@string/cancellation"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/font_xs" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimen_2"
      android:orientation="vertical"
      app:cardBackgroundColor="#f0f6ff"
      app:cardCornerRadius="@dimen/dimen_6">

      <ImageView
        android:layout_marginVertical="@dimen/dimen_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_feather_more_horizontal" />
    </androidx.cardview.widget.CardView>
  </LinearLayout>
</layout>